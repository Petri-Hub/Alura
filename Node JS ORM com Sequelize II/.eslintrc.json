{
   "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true
   },
   "extends": "eslint:recommended",
   "overrides": [],
   "parserOptions": {
      "ecmaVersion": "latest"
   },
   "rules": {
      "indent": [
         "error",
         3
      ],
      "linebreak-style": [
         "error",
         "windows"
      ],
      "quotes": [
         "error",
         "single"
      ],
      "semi": [
         "error",
         "never"
      ],
      "no-unused-vars": [
         "error",
         {
            "vars": "all",
            "args": "none",
            "ignoreRestSiblings": false
         }
      ]
   }
}